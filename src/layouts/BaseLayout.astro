---
// 🔩 Base
import { ViewTransitions } from 'astro:transitions';

// 🧱 Components
import Header from './Header.astro';
import Footer from './Footer.astro';

// 🖋️ Fonts
import '@fontsource/rammetto-one';
import '@fontsource/kanit';
import '@fontsource/birthstone';

// 📦 Props
const { pageTitle = '' } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>French Dev {pageTitle && `• ${pageTitle}`}</title>
    <ViewTransitions />
  </head>
  <body class="flex font-kanit bg-beige text-black flex-col items-center min-h-screen">
    <Header className="flex justify-center py-8" />
    <main class="grow max-w-[90vw] mx-auto w-[1200px]">
      <slot />
    </main>
    <Footer className="flex w-full justify-center py-1 gap-5 mt-4 bg-black text-white" />
  </body>
</html>
