---
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
  <article
    class="post-layout max-w-[75ch] bg-white text-black rounded-md space-y-4 mx-auto p-4"
  >
    <slot />
  </article>
</BaseLayout>
<style is:global>
  .post-layout {
    h2 {
      font-size: 2.5rem;
      font-weight: 900;
      line-height: 1;
    }
  }
</style>
