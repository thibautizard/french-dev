---
const { pageTitle } = Astro.props;

// 🧱 Components
import Header from './Header.astro';
import Footer from './Footer.astro';

// 🖋️ Fonts
import '@fontsource/rammetto-one';
import '@fontsource/kanit';
import '@fontsource/birthstone';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{pageTitle}</title>
  </head>
  <body class="flex font-kanit bg-beige text-black flex-col min-h-screen">
    <Header />
    <main class="grow px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
